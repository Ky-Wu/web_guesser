<html>
  <head>
    <% if background_color == :red %>
    <style>
      body {
        background: darkred;
      }
    </style>
    <% elsif background_color == :springgreen %>
    <style>
      body {
        background: springgreen;
      }
    </style>
    <% else %>
    <style>
      body {
        background: lightpink;
      }
    </style>
    <% end %>
  </head>
  <body>
    <p>
      <%= message %>
    </p>
    <form>
      <input type='text' name='guess' />
      <input type='submit' value='Guess!' />
    </form>
    <p>
      <%= guess_count %> guesses remaining.
    </p>
    <p>
      <% if cheat %>
      The secret number is <%= number %>.
      <% end %>
    </p>
  </body>
</html>
